rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User Profiles: Users can read/write only their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Daily Selections subcollection
      match /dailySelections/{dateId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Vocabulary: Users can read/write only their own words
    match /vocabulary/{wordId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Dictionary: Read-only for authenticated users
    match /dictionary/{wordId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admin via Firebase console
    }
  }
}
